page{
  background-color: #353a51;
}

.image_frame {
  position: absolute;
  bottom: 0rpx;
  margin-top: 50rpx;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0;
}

.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0;
}

.user_info {
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center; */
  width: 650rpx;
  height: 48px;
  top: 0;
  margin: 50rpx 0 50rpx 50rpx;
}

.user_avatar {
  position: relative;
  top: 0;
  height: 48px;
  width: 48px;
  border-radius: 50%;
}

.user_block {
  position: relative;
  left: 50rpx;
  top: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.user_text {
  position: relative;
  color: white;
  font-size: 14px;
  margin-bottom: 10px;
}

.info_list {
  position: absolute;
  top: 100px;
  height: 60%;
  width: 750rpx;
}

.list_item {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 5%;
  height: 80px;
  width: 550rpx;
  margin-left: 100rpx;
  margin-right: 100rpx;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(0, 0, 0, 0.2);
}

.list_container {
  position: absolute;
  left: 5%;
  height: 60px;
  width: 60px;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  border-radius: 50%;
  border-style: solid;
  border-width: 2px;
}

.list_header {
  position: relative;
  left: 6px;
  top: 18px;
  width: 48px;
  height: 36px;
  font-size: 16px;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.list_img {
  position: relative;
  height: 50%;
  width: 100%;
  top: 10%;
}

.list_text {
  position: absolute;
  left: 35%;
  width: 60%;
  margin-right: 5%;
  font-size: 14px;
}

.list_end{
  text-align: center;
  font-size: 12px;
  color: white;
}
