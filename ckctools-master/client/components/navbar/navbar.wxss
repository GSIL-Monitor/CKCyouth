/* components/navbar.wxss */
/*导航*/
.navBtn{
  position: fixed;
  left:15px;
  top:20px;
  width:35px;
  height:40px;
  background-color:#ffddad;
  z-index: 2;
}
.navBtn::after{
  outline:none !important;
  border:none !important;
}
.icon_user {  
  position:relative;
  width: 68rpx;  
  height: 68rpx;   
  align-self: center;
  vertical-align: middle;
  margin:0;
} 

/* 遮罩层 */  
.bg {    
  display: none;    
  position: absolute;    
  top: 0%;    
  left: 0%;    
  width: 100%;    
  height: 100%;    
  background-color: rgba(0, 0, 0, 0.658);    
  z-index: 1;    
  -moz-opacity: 0.7;    
  opacity: 0.70;    
  transition:width 500ms;  
  filter: alpha(opacity=70);    
}   
 /* 侧滑栏 */  
.page_tab{
  height: 100%;  
  width: 550rpx;  
  position: fixed;
  left:-550px; 
  top:0px;
  background-color: white;  
  z-index:2;  
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}

.page_tab_content{
  padding-top:100rpx;
  vertical-align: middle;
}

.page_tab_content .list {  
  color: #000;    
  font-size: 14px;  
  display:inline-block;
  padding-left:25rpx;
  height:28px;
  vertical-align: middle;
}  
  
.page_tab_content .button {  
  width: 280rpx;  
  background: #fb9817;  
  color: #fff;  
  position: relative;  
  right: 120rpx;  
  top: 150rpx;  
  height: 60rpx;  
  line-height: 60rpx;  
}  
  
.page_tab_content image {    
  height: 50rpx;  
  width: 50rpx;  
  padding-left:60rpx;  
  padding-top:50rpx;
}  

.c-state1{
  transform: rotate(0deg) scale(1) translateX(549px); 
  -webkit-transform: rotate(0deg) scale(1) translateX(549px); 
}

.user_head {  
  width: 120rpx;  
  height: 120rpx;  
  border-radius: 50%;  
  text-align: center;  
  margin: 80rpx 80rpx 80rpx 205rpx;  
}  
